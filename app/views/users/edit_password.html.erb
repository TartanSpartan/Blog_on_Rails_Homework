<div class="form">
    <h2 class="mt-2">Modify User Password</h2>
    <%= form_with model: @user, url: password_update_path, local: true do |f| %>
        <div class="form-group mt-3">
            <%= f.label :current_password %>
            <%= f.password_field :current_password, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
            <%= f.label :new_password %>
            <%= f.password_field :password, class: "form-control", placeholder: "This must be 8 characters or more, and different to your old password"  %>
        </div>
        <div class="form-group mt-3">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "This must match the new password which you provided above"  %>
        </div>
        <div class="user-buttons">
            <%= f.submit "Update Password", class: "btn btn-outline-primary" %>
            <%= link_to "Cancel", root_path, class: "btn btn-outline-danger" %>
        </div>
    <% end %>
</div>