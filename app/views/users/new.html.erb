<div class="form">
    <h2 class="mt-2"> Sign Up For Blog Account</h2>
    <%= form_with model:@user, local: true do |f|%>
        <div class="form-group mt-3">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
            <%= f.label :email %>
            <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="form-group mt-3">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "This must match the password which you provided above"  %>
        </div>
        <div class="user-buttons">
            <%= f.submit "Sign Up", class: "btn btn-outline-primary" %>
        </div>
    <% end %>
    <p class="mt-3">Do you already have an account? If so, <%= link_to "Sign In Here", new_session_path %></p>
</div>