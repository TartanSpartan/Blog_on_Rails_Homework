<div class="show">

    <div class="container-fluid-between">
        <h1><%= @post.title %></h1>
        <div class="card border-0">
            <p><%= @post.body %></p>
        </div>
    </div>

    <div class="date">
      <p>Posted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.full_name %> .</p>
    </div>
    <div class="main-buttons">
        <div class="item">
            <%= link_to "Edit", 
            edit_post_path(@post.id),
            class: "btn btn-outline-primary mt-3" %>
        </div>
        <div class="item">
        <%= link_to "Delete",
            post_path(@post.id),
            method: :delete,
            data: { turbolinks: false, confirm: "Are you sure you want to delete this post?" }, 
            class: "btn btn-outline-primary mt-3" %>
        </div>
    </div>

    <div class="form-group mt-4">
        <h5>Comment</h5>
        <%= form_with model: [@post, @comment], local: true do |f| %>

            <div>
                <%= f.text_area :body, placeholder: "What's on your mind?", class: "form-control mt-3" %>
            </div>
            <%= f.submit "Submit", class: "btn btn-outline-primary mt-3"%>
        <% end %>
    </div>

    <% @comments.each do |comment| %>
        <div class="mt-3">
            <p class="card mb-1 border-0"><%= comment.body %></p>
            <small>
                <div class="in-line">
                    <div class="item">
                        <p>Commented <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.full_name %> â€¢ </p>
                    </div>
                    <div class="item">
                        <div class="button-link">
                            <%= link_to "Delete", 
                            comment_path(comment), 
                            method: :delete, 
                            data: { confirm: "Are you sure that you want to delete this comment?" }, 
                            :class => "btn btn-link", 
                            :id => "no-underline" %>
                        </div>
                    </div>
                </div>
            </p>
            </small>
        </div>
    <% end %>
</div>