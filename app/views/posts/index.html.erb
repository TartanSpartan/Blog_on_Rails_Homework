<div class="container justify-content-center">
    <div class="row">
    <% @posts.each do |post| %>
    <div class="grid-item card mt-3 col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xlg-4">
    <div class="card-body">
     <h2><%= link_to(post.title, post_path(post.id)) %></h2>
        <p class="card-text"><%= post.body %></p>
        </div>
</div>
<% end%> 
</div>
</div>